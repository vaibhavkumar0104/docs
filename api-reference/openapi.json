{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Employee Punch API",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C1E0"
  },
  "pages": [
    {
      "title": "Create Missing Punch",
      "path": "/create-missing-punch",
      "description": "Create a missing punch request for an employee.",
      "method": "POST",
      "url": "http://192.168.7.124:9999/erp/index.html/APIServlet?action=appcreatemissingpunch",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Authorization", "value": "Bearer <JWT_TOKEN>" }
      ],
      "body": {
        "employeePhoneNumber": "919714275344",
        "type": "IN",
        "date": "2025-10-06",
        "time": "09:15:00",
        "reason": "Late entry",
        "status": "Pending",
        "isanotherpunchallowed": "yes"
      },
      "responses": [
        {
          "status": 200,
          "description": "Success response",
          "body": {
            "data": {
              "id": "641",
              "message": "Missing Punch Inserted Successfully. Inserted 641",
              "status": "Success"
            }
          }
        },
        {
          "status": 200,
          "description": "Error response",
          "body": {
            "data": {
              "id": "0",
              "message": "Invalid employee phone number",
              "status": "Error"
            }
          }
        }
      ]
    },
    {
      "title": "Approve/Reject Missing Punch",
      "path": "/approve-missing-punch",
      "description": "Approve or reject missing punch requests for employees.",
      "method": "POST",
      "url": "http://192.168.7.124:9999/erp/index.html/APIServlet?action=appmissingpunchrequest",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Authorization", "value": "Bearer <JWT_TOKEN>" }
      ],
      "body": {
        "employeeDetails": [
          { "punchId": "123", "status": "Approved" },
          { "punchId": "124", "status": "Rejected" }
        ]
      },
      "responses": [
        {
          "status": 200,
          "description": "Success response",
          "body": {
            "data": {
              "id": "123",
              "message": "Punch request processed successfully",
              "status": "Success"
            }
          }
        },
        {
          "status": 200,
          "description": "Error response",
          "body": {
            "data": {
              "id": "123",
              "message": "Approver has no permission for Employee Punch Approval",
              "status": "Error"
            }
          }
        }
      ]
    }
  ],
  "security": [
    {
      "type": "bearer",
      "name": "Authorization"
    }
  ]
}
