{
  "openapi": "3.1.0",
  "info": {
    "title": "Employee Punch Approval API",
    "version": "1.0.0",
    "description": "API to approve or reject employee punch requests",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8888"
    }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/APIServlet": {
      "post": {
        "summary": "Approve or reject employee punch requests",
        "description": "Allows an authorized user to approve or reject missing punch requests for employees.",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["appmissingpunchrequest"]
            },
            "description": "Action to be performed by the API"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmployeePunchApprovalRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Punch request processed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmployeePunchApprovalResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error processing the request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "EmployeePunchApprovalRequest": {
        "type": "object",
        "properties": {
          "employeeDetails": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["punchId", "status"],
              "properties": {
                "punchId": {
                  "type": "string",
                  "description": "The ID of the punch record"
                },
                "status": {
                  "type": "string",
                  "enum": ["Approved", "Rejected"],
                  "description": "Status to assign to the punch record"
                }
              }
            }
          }
        },
        "required": ["employeeDetails"]
      },
      "EmployeePunchApprovalResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the request was successful"
          }
        },
        "required": ["success"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        },
        "example": {
          "error": "Error: Approver has no permission for Employee Punch Approval.",
          "message": "Error"
        }
      }
    }
  }
}
